.page {
  position: absolute;
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  background-color: rgb(241, 240, 246);
  padding-bottom: 100rpx;
  overflow: hidden;
}

.page {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.loading {
  width: 220rpx;
  height: 360rpx;
  color: #000;
  text-align: center;
}

.loading__logo {
  width: 220rpx;
  height: 220rpx;
  display: block;
  margin-bottom: 30rpx;
}

.loading__name {
  font-size: 42rpx;
  font-weight: 200;
}